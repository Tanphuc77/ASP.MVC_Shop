@using WebsiteBanHang.Models
@model IEnumerable<SanPham>

<div class="header-middle bg-white header-sticky stick">
    <div class="container logo-nav">
        <div class="row align-items-center">
            <!-- Begin Logo Area -->
            <div class="col-lg-3">
                <div class="logo">
                    <a class="no-sticky" href="index.html">
                        <img src="~/assets/images/menu/logo/2.png" alt="FB's Logo">
                    </a>
                </div>
                <div class="logo">
                    <a class="sticky" href="index.html">
                        <img src="~/assets/images/menu/logo/1.png" alt="FB's Logo">
                    </a>
                </div>
            </div>
            <!-- Logo Area End Here -->
            <!-- Begin Header Middle Menu Area -->
            <div class="col-lg-9 d-none d-lg-block d-xl-block">
                <div class="hm-menu-2">
                    <!-- FB's Navigation -->
                    <nav class="fb-navigation">
                        <ul>
                            <li class="dropdown active">
                                <a href="@Url.Action("DanhSachSanPham","Home")">TRANG CHỦ</a>
                            </li>
                            @foreach (var groupItem in Model.GroupBy(m=>m.LoaiSanPham))
                            {
                                if (groupItem.Key != null)
                                {
                                <li class="dropdown">
                                    <a href="@Url.Action("SanPhamTheoLoai","Home",new { id = groupItem.Key.MaLoaiSP })">@groupItem.Key.TenLoai</a>
                                    <ul class="hb-dropdown">
                                        @foreach (var item in groupItem.GroupBy(m => m.NhaSanXuat))
                                        {
                                            if (item.Key != null)
                                            {
                                                <li>
                                                    <a href="@Url.Action("SanPhamTheoNhaSanXuat","Home",new { id = item.Key.MaNSX })">@item.Key.TenNSX</a>
                                                </li>
                                            }
                                        }
                                    </ul>
                                </li>
                                }
                            }
                            <li>
                                <a href="about-us.html">Giới thiệu</a>
                            </li>
                            <li>
                                <a href="contact.html">Liên hệ</a>
                            </li>
                        </ul>
                    </nav>
                    <!--FB's Navigation -->
                    <!-- Begin Header Middle Mini Cart Area -->
                    <ul class="header-middle-mini-cart">
                        <!-- Begin Header Mini Cart Area -->
                        <li class="hm-minicart">
                            <div class="hm-minicart-trigger">
                                <span class="item-icon"></span>
                                <span class="item-text">
                                    My Cart
                                    <span class="cart-item-count">2</span>
                                </span>
                                <span class="item-total">$120.00</span>
                            </div>
                            <span></span>
                            <div class="minicart">
                                <ul class="minicart-product-list">
                                    <li>
                                        <a href="single-product.html" class="minicart-product-image">
                                            <img src="~/assets/images/minicart/1.jpg" alt="FB's Thumbnail">
                                            <span class="product-quantity">1x</span>
                                        </a>
                                        <div class="minicart-product-details">
                                            <h6><a href="single-product.html">Printed Dress</a></h6>
                                            <span>$23.39</span>
                                        </div>
                                        <button class="close" title="Remove">
                                            <i class="fa fa-close"></i>
                                        </button>
                                    </li>
                                    <li>
                                        <a href="single-product.html" class="minicart-product-image">
                                            <img src="~/assets/images/minicart/2.jpg" alt="FB's Thumbnail">
                                            <span class="product-quantity">1x</span>
                                        </a>
                                        <div class="minicart-product-details">
                                            <h6><a href="single-product.html">Printed Chiffon Dress</a></h6>
                                            <span>$16.40</span>
                                        </div>
                                        <button class="close" title="Remove">
                                            <i class="fa fa-close"></i>
                                        </button>
                                    </li>
                                </ul>
                                <div class="price-content">
                                    <p class="minicart-total">SUBTOTAL<span>$39.79</span></p>
                                    <p class="minicart-total">Shipping<span>$7.00</span></p>
                                    <p class="minicart-total">Taxes<span>$0.00</span></p>
                                    <p class="minicart-total">Total<span>$46.79</span></p>
                                </div>
                                <div class="minicart-button text-center">
                                    <a href="checkout.html" class="fb-btn">
                                        <span>Checkout</span>
                                    </a>
                                </div>
                            </div>
                        </li>
                        <!-- Header Mini Cart Area End Here -->
                    </ul>
                    <!-- Header Middle Mini Cart Area End Here -->
                </div>
            </div>
            <!-- Header Middle Menu Area End Here -->
        </div>
        <div class="row">
            <!-- Begin Mobile Menu Area -->
            <div class="mobile-menu-area mobile-menu-area-4 d-lg-none d-xl-none col-12">
                <div class="mobile-menu"></div>
            </div>
            <!-- Mobile Menu Area End Here -->
        </div>
    </div>
</div>
