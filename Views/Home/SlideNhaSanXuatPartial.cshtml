@using WebsiteBanHang.Models
@model  IEnumerable<NhaSanXuat>
<div class="list-single-slide_product pt-30" style="background-color: #f1f1f1">
    <div class="container">
        <div class="list-product-nav" style="background-color: #ffffff">
            <div class="row">
                <div class="col-lg-12" style="height:100px">
                    <div class="list-single-slide-active owl-carousel">
                        @foreach (var item in Model)
                        {
                            <div class="list-product">
                                <div class="product-img list-product_img">
                                    <a href="@Url.Action("SlideChiTietNhaSanXuat", "Home", new {MaNSX = item.MaNSX})">
                                        <img class="primary-img" style="height:100px" src="@Url.Content("~/assets/images/list-product/" + item.Logo)" alt="FB'S Prduct">
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>