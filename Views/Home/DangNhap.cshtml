@using WebsiteBanHang.Models
@model ThanhVien
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Layout/_LayoutHomeProduct.cshtml";
}
<div class="page-section pt-60 pb-60">
    <div class="container">
        <div class="row">
            <div class="offset-lg-3 col-lg-6 col-md-12 col-12">
                <div class="login-form">
                    <h4 class="login-title">Đăng nhập</h4>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="row">
                            <div class="col-md-12 col-12 mb-20">
                                @Html.LabelFor(model => model.TaiKhoan)
                                <input type="text" name="Username" placeholder="Tài khoản">
                                @Html.ValidationMessageFor(model => model.TaiKhoan, null, new { @class = "text-danger validation" })
                            </div>
                            <div class="col-12 mb-20">
                                @Html.LabelFor(model => model.MatKhau)
                                <input type="password" name="Password" placeholder="Tài khoản">
                                @Html.ValidationMessageFor(model => model.MatKhau, null, new { @class = "text-danger validation" })
                            </div>
                            @*<span id="thong-bao" style="color:red;text-align:left;font-size:13px;">@ViewBag.ThongBao</span>*@
                            <div class="col-md-8">
                                <div class="check-box d-inline-block ml-0 ml-md-2 mt-10">
                                    <input type="checkbox" id="remember_me">
                                    <label for="remember_me">Remember me</label>
                                </div>
                            </div>
                            <div class="col-md-4 mt-10 mb-20 text-left text-md-right">
                                <a href="#"> Forgotten pasward?</a>
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="register-button mt-0">Login</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>  
    </div>
    <script>
    $(document).ready(function () {
        $(".register-button").click(function () {
            setTimeout(function () {
                alert("@Html.Raw(ViewBag.ThongBao)");
            }, 500);
        });
    });
    </script>
