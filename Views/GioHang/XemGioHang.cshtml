@using WebsiteBanHang.Models
@model List<ItemGioHang>
@{
    ViewBag.Title = "XemGioHang";
    Layout = "~/Views/Layout/_LayoutHome.cshtml";
}
@if (Model.Count == 0)
{
    <div class="cart">
        <div class="cart-item">
            <div class="empty-cart">
                <img src="~/assets/images/minicart/empty-cart.png" />
                <div class="empty-cart-text">
                    <h1>Chưa có sản phẩm nào trong giỏ hàng</h1>
                    <p>Hãy mua hàng ngàn sản phẩm chất lượng tại Shop nhé!</p>
                    <a href="@Url.Action("DanhSachSanPham", "Home")" class="fb-btn">Mua sắm ngay</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="Shopping-cart-area pt-60 pb-60">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    @using (Html.BeginForm("MuaHang", "GioHang"))
                    {
                        <div class="table-content table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="fb-product-thumbnail">Hình <span style="text-transform: lowercase; ">ảnh</span></th>
                                        <th class="cart-product-name">Tên <span style="text-transform: lowercase; ">sản phẩm</span></th>
                                        <th class="fb-product-price">Giá</th>
                                        <th class="fb-product-quantity">Số <span style="text-transform: lowercase; ">lượng</span></th>
                                        <th class="fb-product-subtotal">Tổng <span style="text-transform: lowercase; ">thanh toán</span></th>
                                        <th class="fb-product-remove">Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="fb-product-thumbnail" style="width:90px; height:90px;"><img src="@Url.Content("~/assets/images/product/" + item.HinhAnh)" alt="FB's Product Image" /></td>
                                            <td class="fb-product-name"><a href="@Url.Action("ChiTietSanPham", "Sanpham", new { id = item.MaSP, @tensp = item.TenSP })">@item.TenSP</a></td>
                                            <td class="fb-product-price"><span class="amount">@item.DonGia.ToString("#,##")₫</span></td>
                                            <td class="quantity">
                                                <label>Số lượng</label>
                                                <div class="cart-plus-minus">
                                                    <input class="cart-plus-minus-box" value="@item.SoLuong" type="text">
                                                    <div class="dec qtybutton"><i class="fa fa-angle-down"></i></div>
                                                    <div class="inc qtybutton"><i class="fa fa-angle-up"></i></div>
                                                    <div class="dec qtybutton"><i class="fa fa-angle-down"></i></div><div class="inc qtybutton"><i class="fa fa-angle-up"></i></div>
                                                </div>
                                            </td>
                                            <td class="product-subtotal"><span class="amount">@item.ThanhTien.ToString("#,##")₫</span></td>
                                            <td class="fb-product-remove">
                                                @Html.ActionLink("x", "XoaGioHang", new { @maSP = item.MaSP })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="coupon-all">
                                    <div class="coupon2">
                                        <input class="button" name="update_cart" value="Update cart" type="submit">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            @* form thông tin khách hàng đối với khách chưa có tài khoản *@
                            @if (Session["TaiKhoan"] == null)
                            {
                                <div class="col-lg-6 col-12">
                                    <div class="checkbox-form">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="checkout-form-list">
                                                    <label>Họ và tên <span class="required">*</span></label>
                                                    @Html.TextBox("TenKH", null, new { placeholder = "Họ và tên" })
                                                    <label style="color:red" id="lbltenkh"></label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="checkout-form-list">
                                                    <label>Số điện thoại <span class="required">*</span></label>
                                                    @Html.TextBox("SoDienThoai", null, new { placeholder = "Số điện thoại" })
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="checkout-form-list">
                                                    <label>Địa chỉ <span class="required">*</span></label>
                                                    @Html.TextBox("DiaChi", null, new { placeholder = "Địa chỉ" })
                                                    <label style="color:red" id="lbldiaChi"></label>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="checkout-form-list mb-30">
                                                    <label>Email <span class="required">*</span></label>
                                                    @Html.TextBox("Email", null, new { placeholder = "Email" })
                                                    <label style="color:red" id="lblemail"></label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            }
                            <div class="col-md-5 ms-auto" style="margin-top:7px">
                                <div class="cart-page-total">
                                    <h2>Cart totals</h2>
                                    <ul>
                                        <li>Subtotal <span>$130.00</span></li>
                                        <li>Total <span>$130.00</span></li>
                                    </ul>
                                    <input class="fb-btn" type="submit" value="Mua Ngay" id="btnmuahang" style="margin-top:33px;" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
<script>
    $("#btnmuahang").click(function () {
        var error = 0;
        if ($("#TenKH").val() == "") {
            $("#lbltenkh").html("không được bỏ trống");
            error++;
        }
        else {
            $("#lbltenkh").empty();
        }
        if ($("#DiaChi").val() == "") {
            $("#lbldiaChi").html("không được bỏ trống");
            error++;
        }
        else {
            $("#lbldiaChi").empty();
        }
        dinhDangEmail = /^[0-9A-Za-z]+[0-9A-Za-z_]*@@[\w\d.]+\.\w{2,4}$/;
        ktEmail = dinhDangEmail.test($('#Email').val());
        if (!ktEmail) {
            $('#lblemail').text("Email không hợp lệ!");
            error++;
        }

        if (error != 0) {
            return false;
        }
    });

</script>

