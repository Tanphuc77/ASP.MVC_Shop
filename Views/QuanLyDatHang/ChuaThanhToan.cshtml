@model IEnumerable<WebsiteBanHang.Models.DonDatHang>

@{
    ViewBag.Title = "Chuathanhtoan";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
}
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        Ngày đặt
                    </th>
                    <th>
                        Tình trạng giao hàng
                    </th>
                    <th>
                        Ngày giao
                    </th>
                    <th>
                        Đã thanh toán
                    </th>
                    <th>
                        Ưu đãi
                    </th>
                    <th>
                        Đã hủy
                    </th>
                    <th>
                        Đã xóa
                    </th>
                    <th>
                        Tên khách hàng
                    </th>
                    <th>Chức năng</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.NgayDat
                        </td>
                        <td>
                            @item.TinhTrangGiaoHang
                        </td>
                        <td>
                            @item.NgayGiao
                        </td>
                        <td>
                            @item.DaThanhToan
                        </td>
                        <td>
                            @item.UuDai
                        </td>
                        <td>
                            @item.DaHuy
                        </td>
                        <td>
                            @item.DaXoa
                        </td>
                        <td>
                            @item.KhachHang.TenKH
                        </td>
                        <td>
                            <a href="@Url.Action("DuyetDonHang", "QuanLyDatHang", new{ id = item.MaDDH })">Duyệt đơn hàng</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
